@model Sveyko.B1RADIO.Models.Soundtrack

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div>
    <h4>Soundtrack</h4>
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this soundtrack?</h3>
    </div>
    <hr />
    <row>
        <div class="col-12 col-sm-12 col-xs-12">
            <strong>
                @Html.DisplayNameFor(model => model.Genre)
            </strong><br>
        </div>
        <div class="col-12 col-sm-12 col-xs-12">
            @Html.DisplayFor(model => model.Genre.Name)
        </div>
    </row>
    <p>&nbsp;</p>
    <row>
        <div class="col-12 col-sm-12 col-xs-12">
            <strong>
                @Html.DisplayNameFor(model => model.Singer)
            </strong><br>
        </div>
        <div class="col-12 col-sm-12 col-xs-12">
            @Html.DisplayFor(model => model.Singer.Name)
        </div>
    </row>
    <p>&nbsp;</p>
    <row>
        <div class="col-12 col-sm-12 col-xs-12">
            <strong>
                @Html.DisplayNameFor(model => model.Title)
            </strong><br>
        </div>
        <div class="col-12 col-sm-12 col-xs-12">
            @Html.DisplayFor(model => model.Title)
        </div>
    </row>
    <p>&nbsp;</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        @*| <a asp-action="Index">Back to List</a>*@
        <input type="button" class="btn btn-default" value="To List" onclick="location.href='@Url.Action("Index", "Soundtracks")'" />
    </form>
</div>
